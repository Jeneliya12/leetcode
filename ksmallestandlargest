import java.uttil.Arrays;

public class ksmallestandlargest {
    public static void main (String [] args) {
        
        int[] nums = {4, 5, 2, 3, 1, 6};
        k = 2;
        
        Arrays.sort(nums);
        // {1, 2, 3, 4, 5, 6}
        
        System.out.println("Kth Smallest Element: " + nums[k-1]);
        System.out.println("Kth Largest Element: " + nums[nums.length-1]);
    }
}